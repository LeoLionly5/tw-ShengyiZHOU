<h1>List of Twitters</h1>

<div>
  <div>
    <table class="table table-hover">
      <thead>
        <a data-toggle="modal" data-target="#myModal" onclick="add()" class="btn btn-success btn-xs"><i class="fas fa-plus"> Add twitter</i></a>
        <tr>
          <th>id</th>
          <th>message</th>
          <th>create time</th>
          <th>operation</th>
        </tr>
      </thead>
      <tbody>
      {{#each tws}}
        <tr>
          <td>{{{this._id}}}</td>
          {{!-- <td><input type="text" id="CSDN_NAME" text={{{this._id}}}></td> --}}
          <td>{{{this.message}}}</td>
          <td>{{{ formatDate this.createdAt }}}</td>
          <td>
              <a data-toggle="modal" data-target="#myModal" onclick="edit('{{{this._id}}}','{{{this.message}}}')" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></a>
              <a href="/tws/delete/{{this._id}}" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></a>
          </td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
  
  <div class="card-columns">
    {{#each tws}}
      <div class="card">
        <div class="tools">
          <a data-toggle="modal" data-target="#myModal" onclick="edit('{{{this._id}}}','{{{this.message}}}')" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></a>
          <a href="/tws/delete/{{this._id}}" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></a>
        </div>
        <div class="card-body">
          <p class="card-text">{{{this.message}}}</p>
            <footer class="blockquote-footer">
              <small class="text-muted">
                {{{ formatDate this.createdAt }}}
              </small>
            </footer>
        </div>
      </div>
    {{/each}}
  </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title" id="myModalLabel">
				</h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
					&times;
				</button>
			</div>
      <div class="modal-body">
        Message: 
          <input type="text" name="dataId" id="dataId" value="" style="display:none" readonly="true"/>
          <input type="text" name="dataMessage" id="dataMessage" value="" />
      </div>
			<div class="modal-footer">
				<a class="btn btn-sm">cancel</a>
        <a name="saveBtn" id="saveBtn" onclick="changeHref()" href="" class="btn btn-primary btn-sm"><i class="far fa-save"></i> save</a>
			</div>
		</div>
	</div>
</div>